{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-4 box-form">
        <h2>Login</h2>
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="username" name="_username" placeholder="Email" value="{{ lastUsername }}">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success">
            </div>
        </form>
    </div>
{% endblock %}
